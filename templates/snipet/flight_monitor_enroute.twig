<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">{{ label }}</h3>
    </div>
    <div class="panel-body">
        {% if flights is not empty %}
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>{{ Language.departure }}</th>
                    <th>{{ Language.aircraft }}</th>
                    <th>{{ Language.flight }}</th>
                    <th>{{ Language.destination }}</th>
                </tr>
                </thead>
                <tbody>
                {% for flight in flights %}
                    <tr>
                        <td><a href="{{ flight.departure }}">{{ flight.departure }}</a></td>
                        <td><a href="../aircraft/{{ flight.callsign }}">{{ flight.callsign }}</a></td>
                        <td><a href="../flight/{{ flight.flight_number }}">{{ flight.flight_number }}</a></td>
                        <td><a href="{{ flight.destination }}">{{ flight.destination }}</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <h4> {{ Language.currently_noone }} {{ Language.en_route|lower }}. </h4>
        {% endif %}
    </div>
</div>