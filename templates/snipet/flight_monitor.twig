<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">{{ label }}</h3>
    </div>
    <div class="panel-body">
        {% if flights is not empty %}
        <table class="table table-striped table-hover" id="{{ label|lower }}">
            <thead>
            <tr>
                <th>{{ Language.aircraft }}</th>
                <th>{{ Language.flight }}</th>
                <th>{{ airport }}</th>
            </tr>
            </thead>
            <tbody>
            {% for flight in flights %}
                <tr>
                    <td>{{ flight.callsign }}</td>
                    <td><a href="../flight/{{ flight.flight_number }}">{{ flight.flight_number }}</a></td>
                    <td><a href="{{ flight.airport }}">{{ flight.airport }}</a></td>
                    <td>{{ flight.status }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% else %}
            <h4 > {{ Language.currently_noone }} {{ label|lower }}. </h4>
        {% endif %}
    </div>
</div>