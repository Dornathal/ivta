{% extends 'layout.twig' %}
{% block content %}
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <div class="well bs-component">
            {% if flash.errors %}
                <p> Errors detected!</p>
            {% endif %}
            <form class="form-horizontal" method="post">
                <fieldset>
                    <legend>{{ Language.airline }} - {{ airlineData.Callsign }}</legend>
                    <div class="form-group">
                        <label for="Name" class="col-lg-2 control-label">{{ Language.name }}</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" name="Name">
                        </div>
                    </div>
                    <input type="hidden" name="Mode" placeholder="insert">
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="reset" class="btn btn-default">Cancel</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}