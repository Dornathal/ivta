{% extends 'layout.twig' %}
{# block onload %}$("[data-toggle=popover]").popover();{% endblock #}
{% block breadcrumb %}
    <ul class="breadcrumb">
        <li><a href="/airlines">Airlines</a></li>
        <li class="active">{{ airline.Callsign }}</li>
    </ul>
{% endblock %}

{% block content %}

    <div class="row">

        <h1>{{ airline.Name }}</h1>
        <hr>
        {% if aircrafts is not empty %}
        <div class="col-lg-4">
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th></th>
                    <th><span class="glyphicon glyphicon-map-marker glyphicon-align-center"></span></th>
                    <th></th>
                    <th></th>
                    <th>#</th>
                    <th><span class="glyphicon glyphicon-time"></span></th>
                    <th><span class="glyphicon glyphicon-share-alt"></span></th>

                </tr>
                </thead>
                <tbody>
                {% for aircraft in aircrafts %}
                    <tr>
                        <td>{{ aircraft.Status }}</td>
                        <td>{% if aircraft.Location is empty %}
                                {% embed 'snipet/deliver_select_airport.twig' with { 'Callsign': aircraft.Callsign } %}{% endembed %}
                            {% else %} {{ aircraft.Location }}  {% endif %}</td>
                        <td><a href="../aircraft/{{ aircraft.Callsign }}" class="btn btn-primary btn-xs">{{ aircraft.Callsign }}</a></td>
                        <td>{{ aircraft.Model }}</td>
                        <td>{{ aircraft.NumberFlights }}</td>
                        <td>{{ aircraft.FlownTime|date('H:i') }}</td>
                        <td>{{ aircraft.FlownDistance }}</td>
                        {# {% for f in freight %}<td>{{ f }}</td>{%% endfor %} #}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <h4 > {{ Language.no_aircrafts_available }} </h4>
        {% endif %}
        </div>
    </div>
{% endblock %}