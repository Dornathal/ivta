{
    "propel": {
        "database": {
            "connections": {
                "default": {
                    "adapter": "mysql",
                    "dsn": "mysql:host='.DB_HOST.':'.DB_PORT.';dbname='.DB_NAME.'",
                    "user": "'.DB_USER.'",
                    "password": "'.DB_PASS.'",
                    "settings": {
                        "charset": "utf8"
                    }
                }
            }
        },
        "runtime": {
            "defaultConnection": "default",
            "connections": ["default"]
        },
        "generator": {
            "defaultConnection": "default",
            "connections": ["default"]
        },
        "paths": {
            "phpDir": "./website",
            "phpConfDir": "./.generated",
            "sqlDir": "./resources"
        }
    }
}